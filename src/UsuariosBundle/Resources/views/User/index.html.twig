{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
                <h2 class="padding-none">Users</h2>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Tipo</th>
                            <th>Fecha creacion</th>
                            <th>Fecha actualizacion</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.username }}</td>
                                <td>{{ user.nombre }}</td>
                                <td>{{ user.apellido }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                {% if user.tipoEnum == 'ADMIN' %}
                                    <strong>Administrador</strong>
                                {% else %}
                                    <strong>Usuario</strong>
                                {% endif %}
                                </td>
                                <td>{{ user.fechaRegistroDt|date('d-m-Y H:i') }}</td>
                                <td>{{ user.fechaUpdateDt|date('d-m-Y H:i') }}</td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-info">View</a>
                                    <a href="#" class="btn btn-sm btn-primary">Edit</a>
                                    <a href="#" class="btn btn-sm btn-danger btn-delete">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}